@model TransportWorldSystem.Web.Data.Drivers

@{
    ViewData["Title"] = "Edit Driver";
}

<h1>Edit Driver</h1>

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating" class="control-label"></label>
        <input asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VehicleType" class="control-label"></label>
        <input asp-for="VehicleType" class="form-control" />
        <span asp-validation-for="VehicleType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Current Image:</label><br />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" width="100" height="100" />
        }
        else
        {
            <span>No image uploaded.</span>
        }
    </div>

    <div class="form-group">
        <label>Upload New Image:</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ImageUrl" /> <!-- preserve existing image if no new one is uploaded -->

    <div class="form-group mt-3">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
