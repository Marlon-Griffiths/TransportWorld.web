@{
    ViewData["Title"] = "Home Page";
}

<div style="display: flex; justify-content: space-between; align-items: center;">

    <!-- Ride Request Form -->
    <div style="width: 40%; padding: 20px; border: 1px solid #ddd; border-radius: 8px; box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);">
        <h2>Get a Ride</h2>

        <form method="post" action="@Url.Action("RequestRide", "Home")">
            <div style="margin-bottom: 10px;">
                <label for="pickupLocation">Pickup Location</label>
                <input type="text" id="pickupLocation" name="pickupLocation" class="form-control" placeholder="Enter pickup location" required />
            </div>

            <div style="margin-bottom: 10px;">
                <label for="dropoffLocation">Dropoff Location</label>
                <input type="text" id="dropoffLocation" name="dropoffLocation" class="form-control" placeholder="Enter dropoff location" required />
            </div>

            <div style="margin-bottom: 10px;">
                <label for="pickupTime">Pickup Time</label>
                <select id="pickupTime" name="pickupTime" class="form-control">
                    <option value="now">Pickup now</option>
                    <option value="schedule">Schedule for later</option>
                </select>
            </div>

            <div style="margin-bottom: 10px;">
                <label for="passenger">Who is the ride for?</label>
                <select id="passenger" name="passenger" class="form-control">
                    <option value="self">For me</option>
                    <option value="someoneElse">For someone else</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary" style="width: 100%;">Search</button>
        </form>
    </div>

    <!-- Google Map Embed -->
    <div style="width: 55%;">
        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d36095.47788414425!2d-76.78589360135123!3d18.02196657035967!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sjm!4v1743302736990!5m2!1sen!2sjm" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>    </div>
</div>
