@{
    ViewData["Title"] = "Home Page";
}

<div id="clock" style="text-align: right; font-weight: bold; margin-bottom: 10px;"></div>

<script>
    function updateClock() {
        const now = new Date();
        const timeString = now.toLocaleTimeString();
        document.getElementById('clock').textContent = timeString;
    }

    setInterval(updateClock, 1000);
    updateClock();
</script>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div style="display: flex; justify-content: space-between; align-items: center;">
    <div style="width: 40%; padding: 20px; border: 1px solid #ddd; border-radius: 8px; box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1); font-family: Arial, sans-serif;">
        <h2 style="text-align: center; font-weight: bold;">Request a Ride</h2>
        <form method="post" action="@Url.Action("RequestRide", "Home")">
            <div class="form-group">
                <label><strong>Pickup Location</strong></label>
                <select name="PickupLocation" class="form-control" required>
                    <option value="Cross Roads">Cross Roads</option>
                    <option value="Downtown">Downtown</option>
                    <option value="Halfway Tree">Halfway Tree</option>
                </select>
            </div>

            <div class="form-group">
                <label><strong>Dropoff Location</strong></label>
                <select name="DropoffLocation" class="form-control" required>
                    <option value="Cross Roads">Cross Roads</option>
                    <option value="Downtown">Downtown</option>
                    <option value="Halfway Tree">Halfway Tree</option>
                </select>
            </div>

            <div class="form-group">
                <label><strong>Ride Type</strong></label>
                <select name="RideType" class="form-control">
                    <option value="Normal">Normal Ride</option>
                    <option value="Premium">Premium Ride</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 10px;">Find Ride</button>
        </form>
    </div>
</div>
