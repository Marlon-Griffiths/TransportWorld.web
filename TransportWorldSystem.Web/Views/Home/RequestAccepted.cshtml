@{
    ViewData["Title"] = "Request Accepted";
}

<style>
    body {
        position: relative;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        z-index: 0;
    }

        /* 🔲 Add blurred background layer */
        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('/images/map.jpg') no-repeat center center fixed;
            background-size: cover;
            filter: blur(48px); /* Adjust blur level as needed */
            z-index: -1;  
        }

    .confirmation-container{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 90vh;
        text-align: center;
        padding: 20px;
        border-radius: 12px;
        margin: 40px auto;
        max-width: 600px;
    }

    .clock-container {
        position: absolute;
        top: 70px;
        left: 20px;
        font-size: 18px;
        font-weight: bold;
        background-color: rgba(0, 0, 0, 0.8);
        color: white;
        padding: 10px;
        border-radius: 10px;
        font-family: 'Courier New', Courier, monospace;
        box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.3);
        width: fit-content;
    }

    .success-icon {
        font-size: 70px;
        color: #28a745;
        margin-bottom: 20px;
    }

    .btn-home {
        margin-top: 20px;
        font-size: 16px;
    }
</style>

<!-- Real-Time Clock -->
<div class="clock-container" id="clock"></div>

<!-- Confirmation Message -->
<div class="confirmation-container">
    <div class="success-icon">✅</div>
    <h2>Your ride request has been accepted!</h2>
    <p>Your driver is on the way. You can sit back and relax.</p>
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-home">Back to Home</a>
</div>

<script>
    function updateClock() {
        const clock = document.getElementById("clock");
        const now = new Date();
        clock.innerText = now.toLocaleTimeString();
    }

    updateClock();
    setInterval(updateClock, 1000);
</script>
